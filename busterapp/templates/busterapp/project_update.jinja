{% extends "base.html" %}

{% block title %} Project Update {% endblock %}
<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
	<!-- jQuery library -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<!-- Popper JS -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
	<!-- Latest compiled JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</head>
<body>
   {% block content %}
  <div class="container">
     <h2 align="center">Update Project </h2>
     <br><br>
     <form method="POST">
         {% csrf_token %}
         <h4> Project Name : {{form.name}} </h4>

         <button type="submit" class="btn btn-success">Update</button>
     </form>
 </div>
 <div class="container">
     <br>
     <h4 align="center"> <a href="/task" class="btn btn-info" role="button">Add Task Here</a></h4>
     </form>
 </div>
 <br><br>
<div class="container">
    <ul>
        {% for task in tasks recursive %}
            <li>
                <a href="/task/update_task/{{task.id}}">
                 {{ task.name }} -  {{ task.added_on }}
                </a>
                {% if task.task_set.all() %}
                    <ul>{{ loop(task.task_set.all()) }}</ul>
                {% endif %}
            </li>
        {% endfor  %}
    </ul>
<br>
</div>
{% endblock %}
</body>
</html>