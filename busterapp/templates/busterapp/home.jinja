{% extends "base.html" %}

{% block title %} TaskBuster {% endblock %}
<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
	<!-- jQuery library -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<!-- Popper JS -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
	<!-- Latest compiled JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</head>
<body>
{% block content %}
{% if request.user.is_authenticated%}
<div class="container">
  <a href="project" class="btn btn-info" role="button">Add Project</a>
</div>
{% else %}
<div class="container">
  <p>To Add Project You have to login first!!!!</p>
</div>
{% endif %}

<br><br>
<div class="container">
  <table class="table table-bordered">
    <tbody>
    <th> Project Name </th>
    <th> Added_by </th>
    <th> Added_On </th>
      {% for project in projects  %}
      <tr>
          <td>
            <a href="/project/update_project/{{project.id}}">
                 {{ project.name }}
            </a>
          </td>
          <td>
                 {{ project.added_by }}
          </td> 
          <td>
                 {{ project.added_on }}
          </td>
      </tr>
    {% endfor  %}
    </tbody>
  </table>
  
</div>
   {% endblock %}
</body>
</html>